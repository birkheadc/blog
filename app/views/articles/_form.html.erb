<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="articles-form">
    <div class="articles-form-row">
      <div>
        <%= form.label :title %>
        <%= form.text_field :title, class:"articles-form-page-text-input" %>
      </div>

      <div>
        <%= form.label :sub_title %>
        <%= form.text_field :sub_title, class:"articles-form-page-text-input" %>
      </div>

      <div class="articles-form-language">
      <%= form.label :language %>
      <%= form.text_field :language, class:"articles-form-page-text-input" %>
      </div>
    </div>
    <div class="articles-form-row">
      <div class="articles-form-content">
        <%= form.text_area :content %>
      </div>
    </div>
  </div>

  <div class="articles-form-submit-wrapper">
    <%= form.submit class:"articles-form-submit"%>
  </div>
<% end %>
